    if ($('#hidden-links').length === 0) {
        $('body').append('<div id="hidden-links" style="display: none;"></div>');
    }


    /* This function updates the wisdom points display every time a new passage loads */
    $(document).on(':passagedisplay', function() {
        var wisdomPoints = State.variables.wisdomPoints || 0;
        $('#wisdom-points-display').text('Wisdom Points: ' + wisdomPoints);
    });
});

:: StoryStylesheet [stylesheet]
/* Import a pixel-style font */
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

/* --- Base Styles (for Desktop and Mobile) --- */
body {
  background-color: #1a1a2e; /* Dark blue-purple background */
  color: #e0e0e0; /* Light grey text */
  font-family: 'Press Start 2P', cursive;
  font-size: 16px;
}

tw-passage {
  max-width: 800px;
  margin: 0 auto;
  padding-left: 10px; /* Add some padding on the sides */
  padding-right: 10px;
  text-align: left;
  transition: all 0.5s ease-in-out;
}

/* Links and Choices */
tw-link, .enchantment-link {
  color: #fca311; /* Bright orange for links */
  text-decoration: none;
  background-color: #16213e;
  padding: 15px; /* Increased padding for better tap targets */
  border-radius: 5px;
  border: 2px solid #fca311;
  display: block;
  margin: 15px 0;
  text-align: center;
  transition: background-color 0.3s, color 0.3s;
}

tw-link:hover, .enchantment-link:hover {
  background-color: #fca311;
  color: #16213e;
}

/* Character and Scene Images */
img {
  max-width: 100%; /* This is already mobile-friendly! */
  height: auto;
  border-radius: 10px;
  border: 3px solid #0f3460;
  margin: 20px 0;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

/* Dialogue and Narrative Text */
.narrative {
  line-height: 1.8;
  margin-bottom: 20px;
}

/* Explanation Box for Decisions */
.explanation {
  background-color: rgba(15, 52, 96, 0.7); /* Semi-transparent blue */
  border-left: 5px solid #53a8b6; /* Light blue accent */
  padding: 20px;
  margin: 25px 0;
  border-radius: 8px;
}

.explanation b {
    color: #53a8b6; /* Light blue for headings */
}
@media (min-width: 576px) {
  tw-story{
    padding:5% 2%; 
  }  
}

/* --- Mobile Styles (for screens 600px wide or less) --- */
@media (max-width: 600px) {
  body {
    font-size: 14px; /* Slightly smaller font for small screens */
  }
  tw-story{
    padding:5% 5%; 
  }
  tw-passage {
    padding-left: 10px; /* Reduce side padding for more space */
    padding-right: 10px;
  }

  /* Make choice buttons slightly larger for easier tapping */
  tw-link, .enchantment-link {
    padding: 20px 10px;
    font-size: 15px;
  }

  .narrative {
    line-height: 1.7; /* Adjust line spacing for smaller font */
  }

  h2 {
    font-size: 20px; /* Make the main heading a bit smaller */
  }
}